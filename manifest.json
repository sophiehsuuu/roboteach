{
    "manifest_version": 3,
    "name": "RoboLearn SPIKE AI Error Advisor",
    "version": "0.1",
    "permissions": ["scripting", "storage", "tabs"],
    "host_permissions": ["https://spike.legoeducation.com/*"],
    "content_scripts": [
      {
        "matches": ["https://spike.legoeducation.com/*"],
        "js": ["src/content/content.js"]
      }
    ],
    "action": {
      "default_popup": "src/popup/index.html"
    },
    "icons": {
      "16": "icons/robo16.png",
      "48": "icons/robo48.png",
      "128": "icons/robo128.png"
    }
  }
  